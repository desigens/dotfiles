{
    "rules": {
        "indent": [
            2,
            4,
            {"SwitchCase": 1}
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "space-before-function-paren": [
            2,
            "never"
        ],
        "react/jsx-uses-react": 1
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "plugins": [
        "react"
    ],
    "ecmaFeatures": {
        "jsx": true,
        "arrowFunctions": true
    },
    "extends": "eslint:recommended"
}
