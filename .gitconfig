[user]
	name = Denis Denisov
	email = desigens@gmail.com

[core]
	quotepath = false
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore_global

[help] 
	autocorrect = 1

[alias]
	resetsoft = reset HEAD~1 --soft 

[color]
	ui = auto 
	diff = auto 
	status = auto 
	branch = auto 
	pager = true 

[color "status"] 
	added = yellow 
	changed = green 
	untracked = cyan 

[color "branch"] 
	current = yellow reverse 
	local = yellow 
	remote = green 

[color "diff"] 
	meta = yellow bold 
	frag = magenta bold 
	old = red bold 
	new = green bold 
	whitespace = blue reverse 
